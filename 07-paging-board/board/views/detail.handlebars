<h1>{{title}}</h1>
<div class="board-detail">

    <!-- 게시판 정보 영역 -->
    <div class="board-info">
        <h2 class="text-xl">제목입니다.</h2> <!-- 게시글의 제목 -->
        <div class="author-info">
          작성자 :<b>작성자 이름</b> <!-- 작성자 -->
        </div>
        <div  class="post-meta">
          조회수 : 9999 | 작성일시 : 2025-01-01 00:00:00 <!-- 조회수 및 작성일 -->
            <div class="btn-area">
                <button onclick="modifyPost()">수정</button>
                <button onclick="deletePost()">삭제</button>
            </div>
        </div>

        <!-- 본문 내용 영역 -->
        <div class="board-content">
          <pre>본문 입니다</pre> <!-- 본문 내용 -->
        </div>

        <!-- 댓글 작성 폼 -->
        <section class="comment-form">

          <div>
            <h4>* 3개의 댓글이 있습니다.</h4>
          </div>

          <form method="post" action="/write-comment">
            <input type="hidden" name="id" value="{{_id}}" />
            <div>
              <div>
                <input type="text" name="name" placeholder="이름" />
                <input type="password" name="password" placeholder="비밀번호" />
              </div>
              <div>
                <textarea cols="40" rows="3" name="comment" placeholder="댓글을 입력해주세요."></textarea>
                <br /><br /><button>댓글 쓰기</button>
              </div>
            </div>
          </form>
        </section>

        <!-- 댓글 목록 -->
        <section class="comments">
            <div class="comment">
                <div class="comment-info">
                    <div>
                      작성자 : <b>댓글 작성자</b>
                    </div>
                <div>
                  작성일시 : 2025-01-01 00:00:00
                  <button class="delete-comment" onclick="deleteComment('{{idx}}')">삭제</button>
                </div>
              </div>
              <div class="comment-content">
                <pre>{{comment}}</pre>
              </div>
          </div>
        </section>
        <footer class="right">
          <div class="back-to-list">
            <a href="/">목록으로</a>
          </div>
        </footer>
    </div>
</div>

